{
    "id": "org.ekstep.plugins.wordcard",
    "ver": "1.0",
    "author": "Devendra Singh",
    "title": "Wordcard Plugin",
    "description": "",
    "publishedDate": "",
    "editor": {
        "main": "editor/plugin.js",
        "dependencies": [{ "type": "js", "src": "editor/word.js" }, { "type": "js", "src": "editor/translationservice.js" }],

        "menu": [{
            "id": "wordcard",
            "category": "main",
            "type": "icon",
            "toolTip": "Add wordcard data",
            "title": "wordcard",
            "iconClass": "browser icon",
            "onclick": {
                "id": "org.ekstep.plugins.wordcard:showpopup",
                "data": {
                    "type": "roundrect",
                    "x": 5,
                    "y": 5,
                    "fill": "#0000",
                    "w": 90,
                    "h": 90,
                    "radius": 10,
                    "stroke": "rgba(255, 255, 255, 255)",
                    "strokeWidth": 1,
                    "opacity": 0.01
                }
            }

        }],
        "configManifest": [{

        }],
        "help": {
            "src": "editor/help.md",
            "dataType": "text"
        },
        "init-data": {
            "type": "rect",
            "x": 0,
            "y": 0,
            "fill": "#FFFF00",
            "w": 50,
            "h": 25
        }
    }


}
